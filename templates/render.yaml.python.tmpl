services:
  - type: web
    runtime: image
    name: __SERVICE_NAME__
    plan: starter
    region: oregon
    image:
      url: ghcr.io/__GH_REPO__:latest
      creds:
        fromRegistryCreds:
          name: ghcr-climatecentral-ai
    healthCheckPath: /health
    envVars:
      - key: PORT
        value: "__PORT__"
      - key: FLASK_ENV
        value: production
      - key: SECRET_KEY
        generateValue: true
